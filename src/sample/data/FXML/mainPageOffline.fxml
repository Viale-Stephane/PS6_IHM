<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<VBox styleClass="mainPage" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="sample.controllers.OfflineController"
      prefHeight="480.0" prefWidth="640.0">

   <Pane prefHeight="40.0" prefWidth="640.0">
      <ImageView fx:id="filterButton"/>
      <ImageView fx:id="search" fitHeight="25.0" fitWidth="23.0" layoutX="45.0" layoutY="23.0" pickOnBounds="true"
                 preserveRatio="true"/>
      <TextField fx:id="researchBar" layoutX="40.0" prefHeight="40.0" prefWidth="170.0" promptText="Recherche" />
      <Button fx:id="button" layoutX="400.0" layoutY="4" mnemonicParsing="false" prefHeight="32.0" prefWidth="120.0" text="Enregistrement" />
      <Button fx:id="button2" layoutX="520.0" layoutY="4" mnemonicParsing="false" prefHeight="32.0" prefWidth="100.0" text="Connexion" />

   </Pane>

   <Pane id="map" prefHeight="400.0" prefWidth="640.0">
      <Text fx:id="errorDisplay" layoutX="40" layoutY="15"></Text>
      <Pane fx:id="leftPane" prefHeight="400.0" prefWidth="250.0"/>
      <Pane fx:id="midPane" prefHeight="400.0" prefWidth="190.0" layoutX="250.0"/>
      <Pane fx:id="rightPane" prefHeight="400.0" prefWidth="250.0" layoutX="400.0"/>
   </Pane>

   <Pane prefHeight="33.0" prefWidth="608.0">
      <ImageView fx:id="info" fitHeight="25.0" fitWidth="23.0" layoutX="45.0" layoutY="23.0" pickOnBounds="true"
                 preserveRatio="true"/>
   </Pane>
</VBox>
