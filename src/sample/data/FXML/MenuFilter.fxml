<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="mainPane" styleClass="main" fx:controller="sample.controllers.ResearchRestaurantController"
      prefHeight="400.0" prefWidth="250.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
   <Pane prefHeight="59.0" prefWidth="250.0">
      <ToggleButton fx:id="toggleButtonRestaurant" layoutX="52.0" layoutY="19.0" mnemonicParsing="false"
                    text="Restaurant"/>
      <ToggleButton fx:id="toggleButtonCommerce" layoutX="125.0" layoutY="19.0" mnemonicParsing="false"
                    text="Commerce"/>
   </Pane>

   <Pane prefHeight="71.0" prefWidth="250.0">
      <SplitMenuButton fx:id="splitMenuFiltre" layoutX="89.0" layoutY="1.0" mnemonicParsing="false" text="Filtres">
         <items>
         </items>
      </SplitMenuButton>
      <TextField fx:id="textFieldFiltres" alignment="CENTER" layoutX="19.0" layoutY="36.0" opacity="0.7"
                 prefHeight="25.0" prefWidth="212.0" promptText="Populaires : #FastFood"/>
   </Pane>

   <Pane prefHeight="81.0" prefWidth="250.0">
      <Slider fx:id="slideBarPrice" layoutX="55.0" layoutY="46.0" max="500.0" value="100.0"/>
      <Label fx:id="labelPrice" layoutX="14.0" layoutY="6.0" text="Prix Maximum : 100€"/>
      <Label fx:id="priceMax" layoutX="195.0" layoutY="45.0" text="500€"/>
      <Label fx:id="priceMin" layoutX="37.0" layoutY="44.0" text="0€"/>
   </Pane>

   <Pane prefHeight="81.0" prefWidth="250.0">
      <Slider fx:id="slideBarDistance" layoutX="55.0" layoutY="46.0" value="20.0"/>
      <Label fx:id="labelDistance" layoutX="14.0" layoutY="6.0" text="Distance Maximum :20km"/>
      <Label fx:id="distanceMax" layoutX="195.0" layoutY="44.0" text="100km"/>
      <Label fx:id="distanceMin" layoutX="29.0" layoutY="44.0" text="0km"/>
   </Pane>

   <HBox prefHeight="61.0" prefWidth="250.0">
      <Label layoutX="14.0" layoutY="6.0" text="Note minimale :"/>
      <ImageView fx:id="filterStar1" fitHeight="25.0" fitWidth="23.0" layoutX="45.0" layoutY="23.0"
                 pickOnBounds="true" preserveRatio="true"/>
      <ImageView fx:id="filterStar2" fitHeight="25.0" fitWidth="23.0" layoutX="68.0" layoutY="23.0"
                 pickOnBounds="true" preserveRatio="true"/>
      <ImageView fx:id="filterStar3" fitHeight="25.0" fitWidth="23.0" layoutX="91.0" layoutY="23.0"
                 pickOnBounds="true" preserveRatio="true"/>
      <ImageView fx:id="filterStar4" fitHeight="25.0" fitWidth="23.0" layoutX="114.0" layoutY="23.0"
                 pickOnBounds="true" preserveRatio="true"/>
      <ImageView fx:id="filterStar5" fitHeight="25.0" fitWidth="23.0" layoutX="137.0" layoutY="23.0"
                 pickOnBounds="true" preserveRatio="true"/>
   </HBox>

   <Pane prefHeight="61.0" prefWidth="250.0">
      <Button fx:id="buttonReturn" layoutX="55.0" layoutY="17.0" mnemonicParsing="false" text="Retour"/>
      <Button fx:id="buttonFiltre" layoutX="134.0" layoutY="17.0" mnemonicParsing="false" text="Filtrer"/>
   </Pane>
</VBox>
