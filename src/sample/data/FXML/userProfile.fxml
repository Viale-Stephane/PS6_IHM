<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainPane" styleClass="main" fx:controller="sample.controllers.ProfileController" prefHeight="400.0" prefWidth="250.0"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
   <HBox prefHeight="70.0" prefWidth="250.0">
      <Pane prefHeight="70.0" prefWidth="35.0">
         <ImageView layoutX="12.5" fx:id="idPicture" fitHeight="70.0" fitWidth="35.0" layoutY="14.0" pickOnBounds="true"
                    preserveRatio="true"/>
      </Pane>
      <Pane prefHeight="200.0" prefWidth="135.0">
         <Label fx:id="lastName" layoutX="30.0" layoutY="14.0" prefHeight="17.0" prefWidth="60.0" text="Nom"/>
         <Label fx:id="firstName" layoutX="95.0" layoutY="14.0" prefHeight="17.0" prefWidth="60.0" text="Prénom"/>
         <Label fx:id="email" layoutX="30.0" layoutY="35.0" prefHeight="17.0" prefWidth="120.0" text="Email"/>
      </Pane>
   </HBox>
   <Pane prefHeight="280.0" prefWidth="250.0">
      <Button fx:id="history" layoutX="78.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="100.0"
              text="Historique"/>
      <Button fx:id="favorites" layoutX="78.0" layoutY="41.0" mnemonicParsing="false" prefHeight="20.0"
              prefWidth="100.0" text="Favoris"/>
      <Button fx:id="myRatings" layoutX="78.0" layoutY="80.0" mnemonicParsing="false" prefHeight="20.0"
              prefWidth="100.0" text="Mes Avis"/>
      <Button fx:id="addLocation" layoutX="78.0" layoutY="120.0" mnemonicParsing="false" prefHeight="20.0"
              prefWidth="100.0" text="Ajouter un lieu"/>
   </Pane>
   <Pane prefHeight="30.0" prefWidth="250.0">
      <Button fx:id="goBack" layoutY="4.0" mnemonicParsing="false" text="Retour"/>
      <Button fx:id="logOut" layoutX="150.0" layoutY="4.0" mnemonicParsing="false" text="Se Déconnecter"/>
   </Pane>
</VBox>
